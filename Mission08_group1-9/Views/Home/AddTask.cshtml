    <table class="table table-striped">

        <tr>
            <th>Category</th>
            <th>Task Name</th>
            <th>Due Date</th>
            <th>Quadrant</th>
            <th></th>
            
        </tr>
        <tr>
            <td>
                @*for each category display a new option in the dropdown*@
                @*<label asp-for="CategoryId">Category</label>*@
                <select asp-for="CategoryId" class="form-control" form="form">
                    <option disabled>Select a Category</option>
                    @foreach (Category cat in ViewBag.Categories)
                    {
                        <option value="@cat.CategoryId">@cat.CategoryName</option>
                    }
                </select>

            </td>
            <td>
                @*<label asp-for="TaskTitle">Task Name</label>*@
                <input type="text" asp-for="TaskTitle" class="form-control" form="form" />
            </td>
            <td>
                @*<label asp-for="DueDate">Due Date</label>*@
                <input asp-for="DueDate" type="datetime-local" class="form-control" form="form" />
            </td>

            <td>
                <select class="form-control" form="form">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>
            </td>
            <td>
                <button type="submit" form="form" class="btn btn primary">Add</button>
            </td>




        </tr>

